<!DOCTYPE html>
<html>
  <head>
    <%- include('header.ejs') %>
  </head>
  <body>
    <%- include('navbar.ejs') %>

    <div class="login-form">
        <form action="/login" method="post">

            <h2 class="text-center">Logowanie</h2>
            <p style="color: red;">Invalid username or password</p>
            <div class="form-group">
                <input type="text" class="form-control" name="email" placeholder="E-mail" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Hasło" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
            </div>
            <div class="clearfix">
                <!-- <label class="pull-left checkbox-inline"><input type="checkbox"> Zapamiętaj mnie </label>
                <br> -->
                <a href="/password-help" class="pull-right">Nie pamiętasz hasła?</a>
                <br>
                <a href="/register">Nie masz konta? Zarejestruj się!</a>
            </div>        
        </form>
        
    </div>


    <%- include('footer.ejs') %>
       
  </body>
</html>
