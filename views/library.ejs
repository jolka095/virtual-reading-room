<!DOCTYPE html>
<html>
    <head>
    <%- include('header.ejs') %>
    </head>
    <body>
        <%if (user) { %>             <%- include('navbar.ejs') %>         <% } else { %>             <%- include('navbar1.ejs') %>         <% } %>

        <div class="container">
            <h2 class="text-center">Moja biblioteczka</h2>
            <hr>

            <%if (booksArr !== undefined && booksArr !== null) { %>
                <h3 > Chcę przeczytać:</h3>
                <div class="books_container">

                    <div class="card-deck-wrapper">
                        <div class="card-deck">
                            <% booksArr.forEach( (book) => { %>
                                <%if (book.idstatus == 2 ) { %>
                                    <div class="card text-center">
                                        <br>
                                        <img class="card-img-top img-fluid mx-auto d-block" src="/<%= book.image %>" alt="<%= book.title + " " + ' image' %>" >
                                        <div class="card-body d-flex flex-column">
                                            <p class="card-text"><strong><i><%= book.title %></i></strong> <br>
                                                <%= book.author %></p>
                                            <a href="<%= '/book_profile/'+ book.book_id %>" class="btn btn-info btn-block mt-auto"> Więcej </a>
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>
            <% } %>

            <%if (booksArr !== undefined && booksArr !== null) { %>
                <hr>
                <h3 > Przeczytane:</h3>
                <div class="books_container">

                    <div class="card-deck-wrapper">
                        <div class="card-deck">
                            <% booksArr.forEach( (book) => { %>
                            <%if (book.idstatus == 1 ) { %>
                            <div class="card text-center">
                                <br>
                                <img class="card-img-top img-fluid mx-auto d-block" src="/<%= book.image %>" alt="<%= book.title + " " + ' image' %>" >
                                <div class="card-body d-flex flex-column">
                                    <p class="card-text"><strong><i><%= book.title %></i></strong> <br>
                                        <%= book.author %></p>
                                    <a href="<%= '/book_profile/'+ book.book_id %>" class="btn btn-info btn-block mt-auto"> Więcej </a>
                                </div>
                            </div>

                            <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
            <%- include('footer.ejs') %>   
    </body>
</html>
