<!DOCTYPE html>
<html>
  <head>
    <%- include('header.ejs') %>
  </head>
  <body>
            <%if (user) { %>             <%- include('navbar.ejs') %>         <% } else { %>             <%- include('navbar1.ejs') %>         <% } %>

<div class="container text-center">
    <h2>Moja biblioteczka</h2>
</div>

    <%if (booksArr !== undefined && booksArr !== null) { %>
    <hr>
    <h3 id="shelf"> Chcę przeczytać:</h3>
    <div id="books_container">

        <div class="card-deck-wrapper" id="shelf">
            <div class="card-deck">
                <% booksArr.forEach( (book) => { %>
                <%if (book.idstatus == 1 ) { %>
                <div class="card text-center">
                    <br>
                    <a href="book_read.ejs" title="Czytaj >>">
                    <img class="card-img-top img-fluid mx-auto d-block" src="/<%= book.image %>" alt="<%= book.title + " " + ' image' %>" >
                    </a>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text"><strong><i><%= book.title %></i></strong> <br>
                            <%= book.author %></p>
                        <a href="<%= '/book_profile/'+ book.book_id %>" class="btn btn-info btn-block mt-auto"> Więcej </a>
                    </div>
                </div>

                <% } %>
                <% }) %>
            </div>
        </div>
    </div>
    <% } %>

    <%if (booksArr !== undefined && booksArr !== null) { %>
    <h3 id="shelf"> Przeczytane:</h3>
    <div id="books_container">

        <div class="card-deck-wrapper" id ="shelf">
            <div class="card-deck">
                <% booksArr.forEach( (book) => { %>
                <%if (book.idstatus == 2 ) { %>
                <div class="card text-center">
                    <br>
                    <a href="book_read.ejs" title="Czytaj >>">
                    <img class="card-img-top img-fluid mx-auto d-block" src="/<%= book.image %>" alt="<%= book.title + " " + ' image' %>" >
                    </a>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text"><strong><i><%= book.title %></i></strong> <br>
                            <%= book.author %></p>
                        <a href="<%= '/book_profile/'+ book.book_id %>" class="btn btn-info btn-block mt-auto"> Więcej </a>
                    </div>
                </div>

                <% } %>
                <% }) %>
            </div>
        </div>

    </div>

    <% } %>

    <%- include('footer.ejs') %>
       
  </body>
</html>
