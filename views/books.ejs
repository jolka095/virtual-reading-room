<!DOCTYPE html>
<html>

<head>
  <%- include('header.ejs') %>
</head>

<body>
  <%- include('navbar.ejs') %>

    <div class="container text-center">

      <h2>Katalog</h2>
      <hr>

      <%if (booksArr || booksArr !== undefined) { %>
        <div id="books_container">

          <div class="card-deck-wrapper">
            <div class="card-deck">
              <% booksArr.forEach( (book) => { %>

                <div class="card">
                  <img class="card-img-top img-fluid mx-auto d-block" src="<%= book.image %>" alt="<%= book.title + " " + ' image' %>" >
                  <div class="card-body d-flex flex-column">
                    <p class="card-text"><strong><i>"<%= book.title %>"</i></strong>
                      <%= book.author %></p>
                    <a href="<%= '/book_profile/' + book.book_id %>" class="btn btn-info btn-block mt-auto"> Więcej </a>
                  </div>
                </div>

                <% }) %>
            </div>
          </div>

        </div>

        <% } %>
    </div>

    <%- include('footer.ejs') %>
</body>

</html>

